.container
  / start news tabs
  #gallery
    / banner
    .row
      .col-sm-12.banner
        /%img.img-responsive{:alt => "image", :src => "/images/banners/expansion.jpg"}
    / banner end

    /news tabs
    .row
      .col-sm-8
        .row         
          .grid-item.grid-sizer.col-sm-12.servicebox 
            .h2.wow.fadeInUp.animated
              #{@feature.heading}
            .servicebox-image.col-sm-8
              %img.img-responsive{:alt => "#{@feature.heading}", :src => "#{@feature.image_url}"}
              .servicebox-image.col-sm-12
                this is the image caption
            .servicebox-inner
              %p 
                %i.fa.fa-fw.fa-calendar 

                #{@feature.created_at.strftime("%d %b %Y")}
              %br/
              %p #{@feature.intro}
              %br
              %p #{@feature.body}



          / Go to www.addthis.com/dashboard to customize your tools
          .addthis_sharing_toolbox
      / Adverts
      .col-sm-4
        .row.front-news
          .col-sm-12
            %h1.wow.fadeInUp{"data-wow-duration" => "2s"} Adverts
            %ul.advert-image
              %li
                %img.img-responsive{:alt => "image", :src => "http://www.redvillage.co.za/uploads/main_banner/image/20/davincii_cropped.jpg"}
